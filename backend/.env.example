# Database Configuration
DATABASE_URL=postgresql+asyncpg://trading_user:trading_pass@localhost:5432/trading_db
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security (SECRET_KEY must be at least 32 characters)
SECRET_KEY=YourSecretKeyMustBeAtLeast32Characters!
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# API Settings
API_V1_STR=/api/v1
ENVIRONMENT=development

# Alpaca Trading (Paper Trading Only)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO

# Application
APP_NAME=Algo Trading API
APP_VERSION=0.1.0