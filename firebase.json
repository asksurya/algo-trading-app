{
  "hosting": [
    {
      "target": "frontend",
      "public": "frontend/out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.js",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        },
        {
          "source": "**/*.css",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        },
        {
          "source": "**/*",
          "headers": [
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            },
            {
              "key": "X-Frame-Options",
              "value": "DENY"
            },
            {
              "key": "Referrer-Policy",
              "value": "strict-origin-when-cross-origin"
            }
          ]
        }
      ]
    }
  ],
  "apphosting": [
    {
      "backendId": "backend",
      "sourceDir": "backend",
      "buildConfig": {
        "buildCommand": "pip install poetry && poetry install --no-dev"
      },
      "runConfig": {
        "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port 8000"
      }
    }
  ]
}
